<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab4IndividualTask.AdminLoginPage"
             Title="AdminLoginPage">

    <StackLayout Padding="10">
        <Label Text="Вход администратора" FontSize="Large" />
        <Entry x:Name="UsernameEntry" Placeholder="Имя пользователя" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Войти" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>